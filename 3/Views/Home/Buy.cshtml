@{
    ViewData["Title"] = "Оформление заказа";
}
 
<!DOCTYPE html>
<html>
<body>
    <div>
        <h3>Форма оформления покупки</h3>
        <p>Для оформления покупки заполните следующие поля:</p>
        <form method="post">
            <input type="hidden" value="@ViewBag.CarId" name="CarId" />
            <table>
                <tr>
                    <td>ФИО:</td>
                    <td><input type="text" name="BuyerName" /> </td>
                </tr>
                <tr>
                    <td>Адрес:</td>
                    <td><input type="text" name="BuyerAddress" /></td>
                </tr>
                <tr>
                    <td>Телефон:</td>
                    <td><input type="text" name="BuyerPhoneNumber" /></td>
                </tr>
                <tr><td><input type="submit" value="Отправить" /> </td><td></td></tr>
            </table>
        </form>
    </div>
</body>
</html>